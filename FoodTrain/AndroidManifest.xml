<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs1635.tryhards.foodtrain"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cs1635.tryhards.foodtrain.TrainScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cs1635.tryhards.foodtrain.CreateScreen" >
            <intent-filter>
                <action android:name="com.cs1635.tryhards.foodtrain.CreateScreen" />
            </intent-filter>
        </activity>
        <activity android:name="com.cs1635.tryhards.foodtrain.GroupScreen" >
            <intent-filter>
                <action android:name="com.cs1635.tryhards.foodtrain.GroupScreen" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cs1635.tryhards.foodtrain.DetailedTrain"
            android:label="@string/title_activity_detailed_train"
            android:parentActivityName="com.cs1635.tryhards.foodtrain.TrainScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cs1635.tryhards.foodtrain.TrainScreen" />
        </activity>

    </application>

</manifest>