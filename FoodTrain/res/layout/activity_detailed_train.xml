<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedTrain" >

    <TextView
        android:id="@+id/train_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#33B5E5"
        android:padding="5dp"
        android:text="@string/hello_world"
        android:textColor="#2F2B26"
        android:textSize="30dp" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/TextView01"
        android:layout_alignParentLeft="true"
        android:background="#0099CC"
        android:visibility="visible" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/train_name"
        android:layout_marginTop="16dp"
        android:padding="3dp"
        android:paddingLeft="3dp"
        android:text="Where: "
        android:textSize="20dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView01"
        android:padding="3dp"
        android:text="Day:"
        android:textSize="20dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView02"
        android:padding="3dp"
        android:text="Time:"
        android:textSize="20dp"
        android:typeface="serif" />

    <View
        android:id="@+id/View01"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView03"
        android:layout_marginTop="50dp"
        android:background="#0099CC"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/View01" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="252dp"
            android:layout_weight="2.60"
            android:scrollbarDefaultDelayBeforeFade="500000"
            android:scrollbarFadeDuration="0" >

            <LinearLayout
                android:layout_width="142dp"
                android:layout_height="236dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sean" />
            </LinearLayout>
        </ScrollView>

        <View
            android:id="@+id/separator2"
            android:layout_width="3dp"
            android:layout_height="900dp"
            android:background="#0099CC"
            android:visibility="visible" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_weight="16.50"
            android:scrollbarDefaultDelayBeforeFade="500000"
            android:scrollbarFadeDuration="0" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_weight="0.27" >

        <Button
            android:id="@+id/decline"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="Decline" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.91"
            android:text="Back" />
    </LinearLayout>

    <View
        android:id="@+id/View02"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView03"
        android:layout_marginTop="15dp"
        android:background="#0099CC"
        android:visibility="visible" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/View02"
        android:padding="5dp"
        android:paddingLeft="3dp"
        android:text="Going "
        android:textSize="20dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/View01"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="50dp"
        android:padding="3dp"
        android:paddingLeft="3dp"
        android:text="Not Going"
        android:textSize="20dp"
        android:typeface="sans" />

    <View
        android:id="@+id/View03"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_above="@id/button_holder"
        android:layout_alignParentLeft="true"
        android:background="#0099CC"
        android:visibility="visible" />

</RelativeLayout>